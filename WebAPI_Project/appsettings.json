{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "UniversityDB": "Data Source =.; Initial Catalog = WebAPIProject; Integrated Security = True; Encrypt = False"
  },
  "AllowedHosts": "*",

  //Default JWT Settings
  "JWT": {
    "IssuerIP": "http://localhost:5071/",
    "AudienceIP": "http://localhost:4200/",
    "SecurityKey": "asdijqiaq!@##3244343dsdfsfdiui989"
  },

  //Configure Serilog settings
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/api-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithEnvironmentUserName",
      "WithThreadId"
    ]
  }
}
